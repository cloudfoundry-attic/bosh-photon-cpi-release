set -e -x

if [ -z "$BOSH_PACKAGES_DIR" ]; then
	pkg_dir=$(readlink -nf /var/vcap/packages/golang_1.4.2)
else
	pkg_dir=$BOSH_PACKAGES_DIR/golang_1.4.2
fi

export GOROOT=$pkg_dir
export GOPATH=$PWD
export PATH=$GOROOT/bin:$PATH

mkdir ../src && cp -a * ../src/ && mv ../src ./src

mkdir $BOSH_INSTALL_TARGET/bin

export GOARCH=amd64
export GOOS=linux
export GOTOOLDIR=$(go env GOROOT)/pkg/linux_amd64
go build -o $BOSH_INSTALL_TARGET/bin/cpi src/github.com/vmware/bosh-photon-cpi
